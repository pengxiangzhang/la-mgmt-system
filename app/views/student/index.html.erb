<% content_for :title, "Home - student" %>
<div class="main">
  <div class="card">
    <h5 class="card-header">LA Office Hours</h5>
    <div class="card-body">
      <div class="form-group row">
        <div class="col-sm-10">
          <table class="table" id="user-table">
            <thead>
            <tr>
              <th style="white-space: nowrap">Name</th>
              <th style="white-space: nowrap">Course</th>
              <th style="white-space: nowrap">Monday</th>
              <th style="white-space: nowrap">Tuesday</th>
              <th style="white-space: nowrap">Wednesday</th>
              <th style="white-space: nowrap">Thursday</th>
              <th style="white-space: nowrap">Friday</th>
              <th style="white-space: nowrap">Announcement</th>
            </tr>
            </thead>
            <tbody>
            <% @las.each do |la| %>
              <tr>
                <td><%= la.name %></td>
                <td><%= la.course %></td>
                <td><%= la.Monday %></td>
                <td><%= la.Tuesday %></td>
                <td><%= la.Wednesday %></td>
                <td><%= la.Thursday %></td>
                <td><%= la.Friday %></td>
                <td> <%= link_to 'View Announcement', {:action => 'show', :id => la.id} -%></td>
            </tr>
          <% end %>
          </tbody>
        </div>
      </div>
    </div>
  </div>
  <br>
</div>

  <div class="card">
    <h5 class="card-header">Request Appointment</h5>
    <div class="card-body">
      <p class="card-text" style="text-align: center;">Do none of the office hours work for your schedule? Request an
        appointment, and if the schedule aligns, one of our LAs will get in touch with you. </p>
      <a href="/student/request/" class="btn btn-primary btn-block">Request Appointment</a>
    </div>
  </div>

  <script defer type="text/javascript">
      $(document).ready(function () {
          $('#user-table').DataTable({
              lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "All"]],
              dom: 'Bfrtip',
              columnDefs: [{
                  targets: 2,
                  searchable: false,
                  visible: true
              }],
              buttons: ['pageLength'
                  , {
                      text: 'All',
                      action: function () {
                          location.reload(true);
                      }
                  },
                  {
                      text: 'CSCE155',
                      action: function () {
                          var table = $('#user-table').DataTable();
                          table.column(1).search('csce155').draw();
                      }
                  },
                  {
                      text: 'CSCE156',
                      action: function () {
                          var table = $('#user-table').DataTable();
                          table.column(1).search('csce156').draw();
                      }
                  },
                  {
                      text: 'CSCE235',
                      action: function () {
                          var table = $('#user-table').DataTable();
                          table.column(1).search('csce235').draw();
                      }
                  }]
          })
      });
  </script>

