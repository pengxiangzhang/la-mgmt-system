<div id="pc_nav" class="pc_nav">
  <a href="javascript:void(0)" class="closebtn" onclick="closeNav()">&#9776;</a>
  <img class="pc" src="<%=Rails.configuration.custom_prefix+"/cselap-logo.jpg" %>" alt="UNL LOGO" style="margin-left: 25%;max-width: 50%; height: auto;border-radius: 15px;">
  <h1 align="center" style="color:#F4EDE8; font-size:28px">LAProMT</h1>
  <p align="center" style="color:#F4EDE8; font-size:14px">Learning Assistant Program Management Tool</p>

  <% if user_type == "student" %>
    <a href=<%=Rails.configuration.custom_prefix+"/student/request" %> style="text-align:center">Request an LA</a>
    <a href=<%=Rails.configuration.custom_prefix+"/student/index" %> style="text-align:center">View Full Schedule</a>
    <a href=<%=Rails.configuration.custom_prefix+"/student/application" %> style="text-align:center">Apply to be an LA</a>
  <% elsif user_type == "la" %>
    <a href=<%=Rails.configuration.custom_prefix+"/student/request" %> style="text-align:center">Request an LA</a>
    <a href=<%=Rails.configuration.custom_prefix+"/student/index" %> style="text-align:center">View Full Schedule</a>
    <a href=<%=Rails.configuration.custom_prefix+"/la/index" %> style="text-align:center">LA Home</a>
    <a href=<%=Rails.configuration.custom_prefix+"/la/settings" %> style="text-align:center">LA Setting</a>
    <a href=<%=Rails.configuration.custom_prefix+"/student/application" %> style="text-align:center">Apply to be an LA</a>
  <% elsif user_type == "admin" %>
    <a href=<%=Rails.configuration.custom_prefix+"/admin/index" %> style="text-align:center">Admin Home</a>
    <a href=<%=Rails.configuration.custom_prefix+"/admin/courses"%> style="text-align:center">Courses</a>
    <a href=<%=Rails.configuration.custom_prefix+"/admin/evaluations"%> style="text-align:center">Evaluations</a>
    <a href=<%=Rails.configuration.custom_prefix+"/admin/hiring"%> style="text-align:center">Hiring</a>
    <a href=<%=Rails.configuration.custom_prefix+"/admin/management"%> style="text-align:center">System Setting</a>
  <% end %>

  <div class="name_box" style="text-align:center; font-size:24px; color:#F4EDE8;">
    <% if !current_user %>

    <% else %>
      <%= cas_name %>
    <% end %>
    <a class="logout" href="<%=Rails.configuration.custom_prefix+"/logout" %>" style="color: white; text-align:right; font-size: 10px; right: 0px; bottom: 0px; position: absolute;">Log
      out</a>
  </div>
</div>

<div id="mobile_nav" class="mobile_nav">
  <div class="topnav">
    <a href="/" class="active">LAProMT</a>
    <div id="myLinks">
      <% if located == "student" or located == "applicant" %>
        <a href="/student/request">Request LA</a>
        <a href="/student/index">View Full Schedule</a>
        <a href="/student/application">Apply to be an LA</a>
      <% elsif located == "la" %>
        <a href="/la/request">Request LA</a>
        <a href="/la/index">LA Home</a>
        <a href="/la/settings">Setting</a>
      <% elsif located == "admin" or located == "interviewer" %>
        <a href="/admin/index">Admin Home</a>
        <a href="/admin/courses">Courses</a>
        <a href="/admin/evaluations">Evaluations</a>
        <a href="/admin/hiring">Hiring</a>
        <a href="/admin/management">System Setting</a>
      <% end %>
      <% if !current_user %>

      <% else %>
        <a href="/#" style="background-color: #888888">  <%= cas_name %></a>
      <% end %>
      <a href="/logout" style="background-color: #888888">Logout</a>
    </div>
    <a href="javascript:void(0);" class="icon" onclick="mobileNav()">
      <i class="fa fa-bars"></i>
    </a>
  </div>
</div>
<span class="pc_ham" style="font-size:30px;cursor:pointer" onclick="openNav()" id="open_nav_hamburger">&#9776;</span>
<script>
    jQuery(document).ready(function () {
        var width = (window.innerWidth > 0) ? window.innerWidth : document.documentElement.clientWidth;
        if (width > 960) {
            document.getElementById("open_nav_hamburger").click();
        }

    })
</script>