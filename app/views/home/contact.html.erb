<% content_for :title, "Contact Us" %>
<!DOCTYPE html>
<html lang="en">
<head>
  <%= render "layouts/head" %>
</head>
<style>
    html {
        display: block;
        min-height: 100%;
        padding: 20px;
    }
</style>
<script>
    jQuery(function ($) {
        var fbRender = document.getElementById('contact_form'),
            formData =
        <%= raw contact_form.inspect %>
        var formRenderOpts = {
            formData,
            dataType: 'json',
            i18n: {
                location: 'https://formbuilder.online/assets/lang'
            }
        };
        $(fbRender).formRender(formRenderOpts);
    });
</script>
<%= form_tag(home_submit_contact_url, multipart: true, id: "contact_form", method: "post") do %>
<% end %>
</html>