<% content_for :title, "Contact Us" %>
<!DOCTYPE html>
<html lang="en">
<head>
  <%= render "layouts/head" %>
  <script>
      <% if flash %>
      <% flash.each do |type, msg| %>
      Swal.fire('<%= msg %>', '', '<%= type %>')
      <% end %>
      <% end %>
  </script>
</head>
<style>
    html {
        display: block;
        min-height: 100%;
        padding: 20px;
    }
</style>
<script>
    jQuery(function ($) {
        var fbRender = document.getElementById('contact_form'),
            formData =
        <%= raw contact_form.inspect %>
        var formRenderOpts = {
            formData,
            dataType: 'json',
            i18n: {
                location: 'https://formbuilder.online/assets/lang'
            }
        };
        $(fbRender).formRender(formRenderOpts);
    });
</script>
<%= form_tag(home_submit_contact_url, multipart: true, id: "form", method: "post") do %>
  <div id="contact_form"></div>
  <%= hcaptcha_tags %>
  <%= submit_tag("Submit", class: "btn btn-primary", id: "submit") %>
<% end %>
</html>